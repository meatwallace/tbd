{
  "include": ["./src"],
  "exclude": ["./src/setupTests.js"],
  "compilerOptions": {
    "outDir": "dist",

    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "ES2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
